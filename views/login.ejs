<%- include("partials/header") %>

<h2 class="text-2xl font-semibold mb-4 ml-[40%]">Login</h2>

<form action="/login" method="POST" class="bg-white p-6 rounded shadow-md space-y-4">
  <input type="email" name="email" placeholder="Email" required class="w-full px-4 py-2 border rounded">
  <input type="password" name="password" placeholder="Password" required class="w-full px-4 py-2 border rounded">
  <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Login</button>
</form>

<p class="mt-4  ml-[38%]">Don't have an account? <a href="/register" class="text-blue-600 ml-[2%] font-semibold">Register</a></p>

<%- include("partials/footer") %>
