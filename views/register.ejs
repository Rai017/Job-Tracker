<%- include("partials/header") %>

<h2 class="text-2xl font-bold mb-4 ml-[40%]">Register</h2>

<form action="/register" method="POST" class="bg-white p-6 rounded shadow-md space-y-8">
  <input type="text" name="fullname" placeholder="Full Name" required class="w-full px-4 py-2 border rounded">
  <input type="email" name="email" placeholder="Email" required class="w-full px-4 py-2 border rounded">
  <input type="password" name="password" placeholder="Password" required class="w-full px-4 py-2 border rounded">
  <button type="submit" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-700">Register</button>
</form>

<p class="mt-4 ml-[38%] ">Already have an account? <a href="/login" class="text-blue-600 ml-[2%] font-semibold">Login</a></p>

<%- include("partials/footer") %>
