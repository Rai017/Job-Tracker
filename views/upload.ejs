<%- include("partials/header") %>

<h2 class="text-2xl font-semibold mb-4 text-center">Upload Resume</h2>

<form action="/resumes/upload" method="POST" enctype="multipart/form-data" class="max-w-md mx-auto bg-white p-6 rounded shadow space-y-4">
  <input type="text" name="company" placeholder="Company Name" required class="w-full px-4 py-2 border rounded">
  <input type="text" name="role" placeholder="Job Role" required class="w-full px-4 py-2 border rounded">
  <input type="file" name="resume" accept=".pdf" required class="w-full px-4 py-2 border rounded">
  <button type="submit" class="w-full bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Upload</button>
</form>

<%- include("partials/footer") %>
